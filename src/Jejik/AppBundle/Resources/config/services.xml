<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jejik_app.cms_basepath">/cms/pages</parameter>
    </parameters>

    <services>
        <service id="jejik_app.phpcr_initializer" class="Doctrine\Bundle\PHPCRBundle\Initializer\GenericInitializer">
            <argument type="collection">
                <argument>%jejik_app.cms_basepath%</argument>
            </argument>
            <tag name="doctrine_phpcr.initializer"/>
        </service>
    </services>

</container>
